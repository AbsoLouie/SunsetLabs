<div class="container">
<%= erb :sunset_teaser %>

  <div id="login">

    <form action="/users/verify" method="get">
      <h2 class="form-signin-heading">Please sign in</h2>
      <input type="email" name="user[email]" class="form-control" placeholder="Email address" required autofocus>
      <input type="password" name="user[password]"class="form-control" placeholder="Password" required>
      <button class="btn btn-lg btn-primary btn-block" value="Login!" type="submit">Sign in</button>
    </form>

  </div>

  <a href="/users/new">Create an Account</a>

</div>
